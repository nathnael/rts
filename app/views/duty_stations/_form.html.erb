<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- left column -->
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
          
          <!-- form start -->
          <%= form_with(model: @duty_station, local: true) do |f| %>
            <div class="card-body">
              <% if @duty_station.errors.any? %>
                <div class="panel panel-danger">
                  <div class="panel-heading">
                    <%= pluralize(@duty_station.errors.count, "error") %> prohibited this duty_station from being saved.
                  </div>

                  <div class="panel-body">
                    <ul>
                      <% @duty_station.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              <% end %>
              <div class="row">
                <div class="form-group col-3">
                  <%= f.label :name %>
                  <%= f.text_field :name, :class => 'form-control' %>
                </div>

                <div class="form-group col-3">
                  <%= f.label :email %>
                  <input id="email" name="duty_station[address[email]]" type="text" class="form-control" value="<%= @address.present? ? @address.email : "" %>" />
                </div>

                <div class="form-group col-3">
                  <%= f.label :postal_code %>
                  <input id="postal_code" name="duty_station[address[postal_code]]" type="text" class="form-control" value="<%= @address.present? ? @address.postal_code : "" %>" />
                </div>

                <div class="form-group col-3">
                  <%= f.label :zip_code %>
                  <input id="zip_code" name="duty_station[address[zip_code]]" type="text" class="form-control" value="<%= @address.present? ? @address.zip_code : "" %>" />
                </div>
              </div>

              <div class="row">
                
                <div class="form-group col-3">
                  <%= f.label :house_no %>
                  <input id="house_no" name="duty_station[address[house_no]]" type="text" class="form-control" value="<%= @address.present? ? @address.house_no : "" %>" />
                </div>

                <div class="form-group col-3">
                  <%= f.label :street_no %>
                  <input id="street_no" name="duty_station[address[street_no]]" type="text" class="form-control" value="<%= @address.present? ? @address.street_no : "" %>" />
                </div>

                <div class="form-group col-3">
                  <%= f.label :sub_city %>
                  <input id="sub_city" name="duty_station[address[sub_city]]" type="text" class="form-control" value="<%= @address.present? ? @address.sub_city : "" %>" />
                </div>

                <div class="form-group col-3">
                  <%= f.label :woreda %>
                  <input id="woreda" name="duty_station[address[woreda]]" type="text" class="form-control" value="<%= @address.present? ? @address.woreda : "" %>" />
                </div>

              </div>

              <div class="row">
                
                <div class="form-group col-3">
                  <%= f.label :city %>
                  <input id="city" name="duty_station[address[city]]" type="text" class="form-control" value="<%= @address.present? ? @address.city : "" %>" />
                </div>

                <div class="form-group col-3">
                  <%= f.label :state %>
                  <input id="state" name="duty_station[address[state]]" type="text" class="form-control" value="<%= @address.present? ? @address.state : "" %>" />
                </div>

                <div class="form-group col-3">
                  <%= f.label :country %>
                  <input id="country" name="duty_station[address[country]]" type="text" class="form-control" value="<%= @address.present? ? @address.country : "" %>" />
                </div>

                
              </div>
            </div>
            <!-- /.card-body -->
            
            <div class="card-footer">
              <%= f.submit :class => 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
</section>
